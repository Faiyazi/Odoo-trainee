<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!--    Kanban view for Teacher start-->

    <record id="view_school_teacher_kanban" model="ir.ui.view">
        <field name="name">school_teacher_kanban_view</field>
        <field name="model">school.teachers</field>
        <field name="arch" type="xml">
            <kanban sample='1'>
                <field name="teacher_id" />
                <field name="teacher_name" />
                <field name="teacher_email" />

                <templates>
                    <t t-name="card" class="flex-row">
                        <aside class='o_kanban_aside_full'>
                            <div class="position-relative w-100 h-auto m-0">
                                <field name="teacher_image" class='h-100' widget='image'
                                    options="{'img_class': 'object-fit-contain'}"
                                />
                            </div>
                        </aside>

                        <main class="ps-2">
                            <div class="mb-1">
                                <field name="teacher_name" class="mb-0 fw-bold fs-5" />
                            </div>
                            <div class="text-truncate">
                                <i class="fa fa-fw me-1 fa-envelope text-primary" title="Email" />
                                <field name="teacher_email" />
                            </div>

                        </main>

                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <!--    List view for Teacher start-->

    <record id="view_school_teacher_list" model="ir.ui.view">
        <field name="name">school_teacher_list_view</field>
        <field name="model">school.teachers</field>
        <field name="arch" type="xml">
            <list>
                <field name="teacher_id" />
                <field name="teacher_name" />
                <field name="teacher_email" />
            </list>
        </field>
    </record>

    <!--   Form view for Teacher start-->
    <record id="view_school_teacher_form" model="ir.ui.view">
        <field name="name">student.teacher.view.form</field>
        <field name="model">school.teachers</field>
        <field name="arch" type="xml">
            <form>

                <sheet>
                    <widget name="web_ribbon" title="Present" bg_color="bg-success"
                        invisible="teacher_status != 'present'" />
                    <widget name="web_ribbon" title="Absent" bg_color="bg-danger"
                        invisible="teacher_status != 'absent'" />

                    <div class="oe_title">
                        <div style="display: flex; align-items: center;">

                            <field name="teacher_image" widget="image" class="oe_avatar"
                                options='{"zoom": true, "preview_image": "teacher_image"}'
                                style="margin-right: 30px;" />

                            <div>
                                <label for="teacher_id" string="Teacher ID" />
                                <h1>
                                    <field name="teacher_id" readonly="1" />
                                </h1>
                            </div>
                        </div>
                    </div>

                    <group>

                        <group>
                            <field name="teacher_name" />
                            <field name="role" />
                            <field name="teacher_email" />
                            <field name="teacher_contact" />
                            <field name="teacher_gender" />
                            <field name="teacher_status" />
                        </group>

                        <group>
                            <field name="class_ids" domain="[('class_teacher', '=', False)]"
                                options="{'no_create': True}" />
                            <field name="teacher_age" />
                            <field name="teacher_department" widget="many2many_tags" />
                            <field name="teacher_subject"
                                widget="many2many_tags"
                                domain="[('department_ids', 'in', teacher_department)]" />
                        </group>

                    </group>
                </sheet>
                <chatter />

            </form>
        </field>
    </record>
    <!--   Form view for Teacher end-->

    <record id="view_school_teacher_calendar" model="ir.ui.view">
        <field name="name">school.teachers.calendar</field>
        <field name="model">school.teachers</field>
        <field name="arch" type="xml">
            <calendar string="Teachers"
                date_start="create_date"
                color="teacher_status"
                mode="month">
                <field name="teacher_name" />
                <field name="teacher_status" filters="1" />
            </calendar>
        </field>
    </record>

    <record id="action_school_teacher" model="ir.actions.act_window">
        <field name="name">School Teacher</field>
        <field name="res_model">school.teachers</field>
        <field name="view_mode">list,form,kanban,calendar</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create your Teacher profile</p>
        </field>
    </record>

</odoo>