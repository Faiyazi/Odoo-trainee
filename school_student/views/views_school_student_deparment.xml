<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_school_department_form" model="ir.ui.view">
        <field name="name">school.department.form</field>
        <field name="model">school.department</field>
        <field name="arch" type="xml">
            <form string="Department">
                <sheet>
                    <group>
                        <field name="department_name" />
                        <field name="hod" />
                    </group>
                    <notebook>
                        <page string="Subjects">
                            <field name="subject_ids">
                                <list editable="bottom">
                                    <field name="subject_code" />
                                    <field name="name" />
                                    <field name="subject_credit" />
                                </list>
                            </field>
                        </page>
                        <page string="Teacher">
                            <field name="teacher_dep">
                                <list editable="bottom">
                                    <field name="teacher_name" />
                                    <field name="teacher_subject" widget="many2many_tags" />
                                    <field name="teacher_contact" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_school_department" model="ir.actions.act_window">
        <field name="name">Department</field>
        <field name="res_model">school.department</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create your first student profile</p>
        </field>
    </record>
</odoo>