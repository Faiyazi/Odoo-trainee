    <!--  list view for school student  -->
    <record id="view_school_student_list" model="ir.ui.view">
        <field name="name">school.student.list.view</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <list>
                <field name="student_id" />
                <field name="student_name" />
                <field name="student_gender" widget="badge" />
                <field name="class_id" />
            </list>
        </field>
    </record>

    <!--  form view for school student  -->
    <record id="view_school_student_form" model="ir.ui.view">
        <field name="name">school.student.form.view</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button type="object" string="Click" class="oe_highlight" name="click_button" />
                    <button type="object" string="Show" class="oe_highlight" name="show_rainbow" />
                </header>
                <sheet>
                    <group>
                        <field name="image_128" widget="image" class="oe_avatar" />
                        <group>
                            <field name="student_id" />
                            <field name="student_name" />
                            <field name="student_email" />
                            <field name="dob" />
                            <field name="class_id" />
                            <field name="status" />

                            <field name="subject_ids">
                                <list editable="bottom">
                                    <field name="name" />
                                    <field name="subject_code" />
                                    <field name="student_marks" />
                                </list>
                            </field>

                        </group>

                        <group>
                            <field name="student_phone_no" />
                            <field name="student_gender" />
                            <field name="student_total_marks" widget='auto_field_color' options='{"color":"red"}' class="o_bold" readonly="1" />

                        </group>

                        <notebook>
                            <page string="Contact">
                                <group>
                                    <field name="street_name" />
                                    <field name="state" />
                                    <field name="city" />
                                </group>
                            </page>
                            <page string="parent's">
                                <group col="2">
                                    <field name="parent_name" />
                                    <field name="parent_phone" />
                                </group>
                            </page>
                        </notebook>
                    </group>

                </sheet>
            </form>
        </field>
    </record>


    <!--    List view for Student Class model-->
    <record id="student_class_view_list" model="ir.ui.view">
        <field name="name">Student class list view</field>
        <field name="model">student.class</field>
        <field name="arch" type="xml">
            <list>
                <field name="class_name" />
            </list>
        </field>
    </record>


    <!--    Form view for Student Class model-->
    <record id="student_class_view_form" model="ir.ui.view">
        <field name="name">Student class form view</field>
        <field name="model">student.class</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="class_name" />
                        <field name="class_total" />

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--  Form view for Student Subject  -->
    <record id="student_subject_view_form" model="ir.ui.view">
        <field name="name">Student subject form view</field>
        <field name="model">student.subject</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="subject_code" />
                        <field name="student_marks" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <!--    List view for Student Subject model-->
    <record id="student_subject_view_list" model="ir.ui.view">
        <field name="name">Student Subject list view</field>
        <field name="model">student.subject</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="subject_code" />
            </list>
        </field>
    </record>


