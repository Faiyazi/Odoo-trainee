<?xml version="1.0" encoding="UTF-8"?>
<odoo>


    <!--    Search view for school student -->
    <record id="view_school_student_search" model="ir.ui.view">
        <field name="name">school.student.search.view</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <search>
                <!-- Field to search -->
                <field name="student_gender" string="Student Gender" />
                <field name="class_id" string="Classes" />

                <filter name="filter_by_gender" string="Male"
                    domain="[('student_gender', '=', 'male')]" />

                <filter name="filter_by_gender" string="Female"
                    domain="[('student_gender', '=', 'female')]" />

                <filter name="filter_by_class" string="Class"
                    domain="[('class_id','=','Class 1')]" />

                <filter name="filter_by_class" string="Class"
                    domain="[('class_id','=','Class 2')]" />

                <filter name="filter_by_class" string="Class"
                    domain="[('class_id','=','Class 3')]" />

                <filter name="filter_by_group" string="Gender"
                    context="{'group_by':'student_gender'}" />
            </search>
        </field>
    </record>


    <record id="quick_create_student_form" model="ir.ui.view">
        <field name="name">school.student.quick.create.form</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <form string="Quick Student">
                <group>
                    <field name="student_name" />
                    <field name="student_gender" />
                </group>
            </form>
        </field>
    </record>


    <!-- Kanban view -->
    <record id="view_school_student_kanban" model="ir.ui.view">
        <field name="name">view.school.student.kanban</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status"
                quick_create_view="school_student.quick_create_student_form"
                on_create="quick_create">

               <field name="status" />
                <field name="student_name" />
                <field name="student_gender" />
                <field name="image_128" />
                
                 <progressbar field='status' colors='{
                "new": "success",
                "present": "warning",
                "absent": "danger"
        }' />

      


               
                <templates>
                <field name="status" />

                
                    <t t-name="card">
                        <div class="oe_kanban_global_click o_kanban_record">
                             <aside class='o_kanban_aside_full'>

                                <div class="o_kanban_image_fill position-relative w-100">
                                <field name="image_128"  class='h-100' widget='image' />
                            </div>

                             </aside>
                            
                            <div class="o_kanban_details">
                                <strong>
                                    <field name="student_name" />
                                </strong>
                                <br />
                                <span>
                                    <field name="student_gender" />
                                </span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <!-- Pivot view for School Student -->
    <record id="view_school_student_pivot" model="ir.ui.view">
        <field name="name">school.student.pivot</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <pivot string="School Students">
                <!-- Groupable field -->
                <field name="student_gender" type="row" />
                <field name="class_id" type="col" />

                <field name="city" />
            </pivot>
        </field>
    </record>

    <!--    View for Calendar in School Student-->

    <record id="views_school_student_calendar" model="ir.ui.view">
        <field name="name">school.student.calendar</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <calendar string="Student Calendar" date_start="dob" color="student_gender">
                <field name="student_name" />
            </calendar>
        </field>
    </record>

    <!--   Graph View for School Student Bar-->


    <record id="view_school_student_graph_line" model="ir.ui.view">
        <field name="name">view.school.student.graph</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">


            <graph type="pie">
                <field name="class_id" type="row" />
                <field name="subject_ids" type="col" />
            </graph>

        </field>
    </record>


    <record id="view_school_student_graph_bar" model="ir.ui.view">
        <field name="name">view.school.student.graph</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">

            <graph type="bar">
                <field name="student_gender" type="row" />
                <!--                <field name="student_marks" type="measure"/>-->
            </graph>

        </field>
    </record>

