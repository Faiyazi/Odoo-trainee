<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Kanban view for Class -->
    <record id="student_class_kanban_view" model="ir.ui.view">
        <field name="name">student_class_kanban_view</field>
        <field name="model">student.class</field>
        <field name="arch" type="xml">
            <kanban default_group_by="class_teacher" on_create="quick_create">
                <field name="class_teacher" />
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="class_name" />
                                </strong>
                                <div> Teacher: <field name="class_teacher" />
                                </div>
                                <div> Rep: <field name="class_rep_b" />
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <!--    Form view for Student Class model-->
    <record id="student_class_view_form" model="ir.ui.view">
        <field name="name">Student class form view</field>
        <field name="model">student.class</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="class_name" />
                            <field name="class_teacher" domain="[('class_ids', '=', False)]" />
                            <field name="class_rep_b"
                                domain="[('student_gender', '=', 'male'), ('class_id', '=', id)]"
                                options="{'no_create': True, 'no_open': True}" />


                            <field name="class_total" />
                        </group>
                        <group>
                            <field name="section" />
                            <field name="class_rep_g"
                                domain="[('student_gender', '=', 'female'), ('class_id', '=', id)]"
                                options="{'no_create': True, 'no_open': True}" />
                        </group>

                        <notebook>
                            <page string="Student">
                                <field name="student_id">
                                    <list editable="bottom">
                                        <field name="student_name" />
                                        <field name="student_gender" />
                                        <field name="status" />
                                    </list>
                                </field>
                            </page>
                            <page string="Subject">
                                <field name="class_subject" />
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_school_class" model="ir.actions.act_window">
        <field name="name">Classes</field>
        <field name="res_model">student.class</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create your first student profile</p>
        </field>
    </record>

</odoo>