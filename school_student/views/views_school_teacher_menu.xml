<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_school_department_form" model="ir.ui.view">
        <field name="name">school.department.form</field>
        <field name="model">school.department</field>
        <field name="arch" type="xml">
            <form string="Department">
                <sheet>
                    <group>
                        <field name="department_name" />
                    </group>
                    <notebook>
                        <page string="Subjects">
                            <field name="subject_ids">
                                <list editable="bottom">
                                    <field name="subject_code" />
                                    <field name="name" />
                                    <field name="subject_credit" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_school_department" model="ir.actions.act_window">
        <field name="name">Department</field>
        <field name="res_model">school.department</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="menu_school_teacher"
        name="Teacher"
        parent="menu_school_student_root"
        sequence="3"
        action="action_school_teacher"
    />

    <menuitem id="menu_school_teacher_teacher"
        name="Teacher"
        parent="menu_school_teacher"
        sequence="1"
        action="action_school_teacher"
    />

    <menuitem id="menu_school_teacher_wizard"
        name="Start"
        parent="menu_school_teacher"
        sequence="2"
        action="action_class_start"
    />

    <menuitem id="menu_school_teacher_wizard_trans"
        name="Meeting"
        parent="menu_school_teacher"
        sequence="3"
        action="action_class_start_trans"
    />

    <menuitem id="menu_school_department_root"
        name="Department"
        parent="menu_school_student_root"
        sequence="4"
        action="action_school_department"
    />


</odoo>