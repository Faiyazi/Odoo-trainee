<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Actions must come first -->

    <!-- General Student Action -->
    <record id="action_school_student" model="ir.actions.act_window">
        <field name="name">School Students</field>
        <field name="res_model">school.student</field>
        <field name="view_mode">list,form,pivot,calendar,graph,search,kanban</field>
        <field name="help" type="html">
            <p class="o_nocontent_smiling">Create your first student profile</p>
        </field>
    </record>

    <!--    &lt;!&ndash; Section A Action &ndash;&gt;-->
    <record id="action_school_student_section1" model="ir.actions.act_window">
        <field name="name">Section A</field>
        <field name="res_model">school.student</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_nocontent_smiling">Create your first student profile</p>
        </field>
    </record>

    <!--    Action for student class start-->
    <record id="action_school_class" model="ir.actions.act_window">
        <field name="name">Classes</field>
        <field name="res_model">student.class</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_nocontent_smiling">Create your first student profile</p>
        </field>
    </record>


    <!--    Action for student subject start-->
    <record id="action_school_subject" model="ir.actions.act_window">
        <field name="name">Subject</field>
        <field name="res_model">student.subject</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_nocontent_smiling">Create your first student profile</p>
        </field>
    </record>

    <!--    Action for student class end-->


    <!-- Now the menu items -->

    <!-- Main Menu -->
    <menuitem id="menu_school_student_root" name="School Student" sequence="1"/>

    <!-- Student Submenu -->


     <menuitem id="menu_school_student_student_student"
              name="Student"
              parent="menu_school_student_root"
              action="action_school_student"
               sequence="1"

     />


    <!-- Section A Submenu -->
    <menuitem id="menu_school_student_section1"
              name="Section A"
              parent="menu_school_student_student_student"
              action="action_school_student_section1"
              sequence="2"
    />

    <!-- Classes Submenu -->
    <menuitem id="menu_school_student_class"
              name="Classes"
              parent="menu_school_student_root"
              action="action_school_class"/>

    <!-- Subject Submenu -->
    <menuitem id="menu_school__subject"
              name="Subject"
              parent="menu_school_student_root"
              action="action_school_subject"/>


</odoo>
