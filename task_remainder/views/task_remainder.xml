<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="view_task_form_inherit_dates" model="ir.ui.view">
        <field name="name">project.task.form.inherit.dates</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <!-- Add fields under the task form -->
            <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="is_active"/>
            </xpath>
        </field>
    </record>

    <record id="task_remainder.view_inherited_res_config_settings_form" model="ir.ui.view">
        <field name="name">view.inherited.res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='languages']" position="after">
                <block title="Credit" id="credit_limit_settings">
                    <setting id="credit_limit" title="Credit limit of a partner">
                        <field name="credit" readonly="0"/>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>

    <record id="task_remainder.view_inherited_res_config_partner_form" model="ir.ui.view">
        <field name="name">view.inherited.res.config.settings.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_type']" position="before">
                <group>
                    <field name="partner_credits_limits" readonly="0"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>