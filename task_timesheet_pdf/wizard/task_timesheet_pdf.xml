<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Wizard Form View -->
    <record id="time_sheet_wizard" model="ir.ui.view">
        <field name="name">tasktimesheet.wizard.form</field>
        <field name="model">tasktimesheet.wizard</field>
        <field name="arch" type="xml">
            <form string="Task Timesheet">
                <sheet>
                    <group>
                        <field name="date_start"/>
                        <field name="date_end"/>
                    </group>
                    <footer>
                        <button name="action_print_report_pdf"
                                type="object"
                                string="Generate PDF"
                                class="btn-primary"/>
                        <!-- <button name="action_print_report_xlsx" type="object" string="Excel" class="btn-primary"/> -->
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Wizard Action -->
    <record id="timesheet_task_actions" model="ir.actions.act_window">
        <field name="name">Task Timesheet Wizard</field>
        <field name="res_model">tasktimesheet.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="time_sheet_wizard"/>
        <field name="target">new</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_task_timesheet"
              name="Task Timesheet"
              parent="project.menu_project_report"
              action="timesheet_task_actions"
              sequence="10"/>
</odoo>
