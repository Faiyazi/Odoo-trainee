<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="test_form_view" model="ir.ui.view">
        <field name="name">Test Custom Form View</field>
        <field name="model">task.custom</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <group>
                        <field name="status" widget='statusbar' options="{'clickable':1}" />
                    </group>
                    
                </header>
                <sheet>
                    <group name="name">
                        <field name="name" />
                        <field name="task_id" />
                        <field name="tag_ids" />
                        <field name="project_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_test_custom" model="ir.actions.act_window">
        <field name="name">Test Custom</field>
        <field name='res_model'>task.custom</field>
        <field name='view_mode'>list,form</field>
        <field name="help" type="html">
            <p class="o_nocontent_smiling">Create your first student profile</p>
        </field>
    </record>

</odoo>