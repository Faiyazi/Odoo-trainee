<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="DemoComponent" name="Owl Demo Component">
        <div class="p-4 border">
            <h3>Odoo 18 OWL Demo</h3>

            <input type="text"
                   t-on-input="updateNewItem"
                   t-att-value="state.newItem"
                   placeholder="Enter a new item"/>
            <button t-on-click="addItem">Add Item</button>

            <ul>
                <t t-foreach="state.items" t-as="item" t-key="item">
                    <li><t t-esc="item"/></li>
                </t>
            </ul>
        </div>
    </template>
</odoo>
