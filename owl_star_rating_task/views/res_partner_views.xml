<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>
        <record id="view_partner_form_inherit_owl_star_rating_task" model="ir.ui.view">
            <field name="name">view.partner.form.inherit.owl.star.rating.task</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='website']" position="after">
                    <field name="record_rating" widget="star_rating" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>