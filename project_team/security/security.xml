<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Module Category -->
        <record model="ir.module.category" id="module_category_project_team">
            <field name="name">Project Team</field>
            <field name="description">This is for project team</field>
            <field name="sequence">1</field>
        </record>

        <record model="res.groups" id="res_group_project_team_administrator">
            <field name="name">Project Administrator</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record model="res.groups" id="res_group_project_team_project_manager">
            <field name="name">Project Manager</field>
            <field name="implied_ids" eval="[(4, ref('project.group_project_manager'))]"/>
        </record>

        <record model="res.groups" id="res_group_project_team_user">
            <field name="name">Project User</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="project_task_rule_user" model="ir.rule">
            <field name="name">Project Tasks: Own Documents Only</field>
            <field name="model_id" ref="project.model_project_task"/>
            <field name="groups" eval="[(4, ref('res_group_project_team_user'))]"/>
            <field name="domain_force">[('user_ids', 'in', user.id)]</field>
        </record>

    </data>
</odoo>
