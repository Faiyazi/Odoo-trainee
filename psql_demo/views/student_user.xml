<odoo>
    <data>
        <record id="student_user_views_form" model="ir.ui.view">
            <field name="name">Student User</field>
            <field name="model">student.user</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="create_user_records" string="Create Student" type="object" class="btn-primary"/>
                        <button name="select_user_records" string="Select Student" type="object" class="btn-primary"/>
                        <button name="update_user_records" string="Update Student" type="object" class="btn-primary"/>
                        <button name="delete_user_records" string="Delete Student" type="object" class="btn-primary"/>

                    </header>
                    <sheet>
                        <group>
                            <field name="student_id"/>
                            <field name="name"/>
                            <field name="age"/>
                            <field name="gender"/>
                            <field name="course"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="student_user_views_list" model="ir.ui.view">
            <field name="name">Student User</field>
            <field name="model">student.user</field>
            <field name="arch" type="xml">
                <list>
                    <field name="student_id"/>
                    <field name="name"/>
                    <field name="age"/>
                    <field name="gender"/>
                    <field name="course"/>
                </list>
            </field>
        </record>


        <record id="action_student_user_views_form" model="ir.actions.act_window">
            <field name="name">Student user Action</field>
            <field name="res_model">student.user</field>
            <field name="view_mode">list,form</field>
        </record>


        <menuitem name="PSQl Demo" id="menu_psql_demo"/>


        <menuitem name="Student" id="menu_student_user" parent="menu_psql_demo"
                  action="action_student_user_views_form"/>

    </data>
</odoo>
