<odoo>
    <data>
        <!-- Students can see only their own record -->
        <record id="college_rule_student_own_record" model="ir.rule">
            <field name="name">Student: Own Record</field>
            <field name="groups" eval="[(4, ref('college_erp.group_college_student'))]"/>
            <field name="model_id" ref="model_college_student_admission"/>
            <field name="domain_force">[('user_id','=',user.id)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Teachers can see all students -->
        <record id="college_rule_teacher_all_students" model="ir.rule">
            <field name="name">Teacher: All Students</field>
            <field name="groups" eval="[(4, ref('college_erp.group_college_teacher'))]"/>
            <field name="model_id" ref="model_college_student_admission"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>
