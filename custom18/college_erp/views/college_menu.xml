<odoo>
    <!--Window Actions -->
    <record id="action_college_student_admission" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">college.student.admission</field>
        <field name="view_mode">list,form,kanban,calendar,graph,pivot</field>
        <field name="search_view_id" ref="college_erp.college_student_admission_views_search"/> <!--search view seen
        in the ui-->

    </record>

    <record id="action_college_teacher" model="ir.actions.act_window">
        <field name="name">Teachers</field>
        <field name="res_model">college.teacher</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="context">{'department': 'science'}</field>

    </record>

    <record id="action_college_staff" model="ir.actions.act_window">
        <field name="name">Staff</field>
        <field name="res_model">college.staff</field>
        <field name="view_mode">list,form,kanban,calendar</field>
        <field name="search_view_id" ref="college_erp.college_staff_views_search"/> <!--search view seen in the ui-->
    </record>

    <!--Server Actions -->
    <!-- Share Button in action menu -->
    <record id="action_mark_as_confirm" model="ir.actions.server">
        <field name="name">Mark As Confirm</field>
        <field name="model_id" ref="college_erp.model_college_student_admission"/>
        <field name="binding_model_id" ref="college_erp.model_college_student_admission"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
        for record in records:
            if not record.state or record.state == 'draft':
                record.action_done()
      </field>
    </record>

        <!-- client action  -->

    <record id="college_student_client_action" model="ir.actions.client">
        <field name="name">Student Client Action</field>
        <field name="tag">college_student_client_action</field>
    </record>

    <!--    PDF_Report action (Used forStudent) -->
    <record id="action_report_template_pdf" model="ir.actions.report">
        <field name="name">Student Report(PDF)</field>
        <field name="model">college.student.admission</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">college_erp.report_student_report</field>
        <field name="report_file">college_erp.report_student_report</field>
        <field name="binding_model_id" ref="college_erp.model_college_student_admission"/>
        <field name="binding_type">report</field>
    </record>

    <!--    HTML_Report action (Used forStudent) -->
    <record id="action_report_template_html" model="ir.actions.report">
        <field name="name">Student Report(HTML)</field>
        <field name="model">college.student.admission</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">college_erp.report_student_report</field>
        <field name="report_file">college_erp.report_student_report</field>
        <field name="binding_model_id" ref="college_erp.model_college_student_admission"/>
        <field name="binding_type">report</field>
    </record>




    <!-- Menu Root -->
    <menuitem id="menu_college_erp_root" name="College ERP" sequence="10"/>

    <!-- Menu Items -->
    <menuitem id="menu_college_student_admission" name="Students" parent="menu_college_erp_root" sequence="1"
              action="action_college_student_admission"/>
    <menuitem id="menu_college_teacher" name="Teachers" parent="menu_college_erp_root" sequence="2"
              action="action_college_teacher"/>
    <menuitem id="menu_college_staff" name="Staff" parent="menu_college_erp_root" sequence="3"
              action="action_college_staff"/>
</odoo>
