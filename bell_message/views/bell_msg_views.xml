<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="bell_msg_form_view" model="ir.ui.view">
        <field name="name">Bell message form view</field>
        <field name="model">x.alert</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="title" />
                        <field name="message" />
                        <field name="is_read"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


