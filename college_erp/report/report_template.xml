<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--    Report Template pdf-->
    <template id="report_student_report">
        <t t-call="web.html_container">
           <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="oe_structure"/>
                        <h2>Student Admission Report</h2>
                        <br/>
                        <p><strong>Admission Number:</strong> <t t-esc="o.name"/></p>
                        <p><strong>Name:</strong> <t t-esc="o.student_name"/></p>
                        <p><strong>Email:</strong> <t t-esc="o.email"/></p>
                        <p><strong>Phone:</strong> <t t-esc="o.phone"/></p>
                        <p><strong>Admission Date:</strong> <t t-esc="o.admission_datetime"/></p>
                        <p><strong>Fees Paid:</strong> <t t-esc="o.fees_paid"/></p>

                        <br/>
                    </div>

                </t>
            </t>
        </t>
    </template>


</odoo>

