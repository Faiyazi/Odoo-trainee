<odoo>
    <record id="college_teacher_views_form" model="ir.ui.view">
        <field name="name" >college.teacher.form</field>
        <field name="model" >college.teacher</field>
        <field name="arch" type="xml">
            <form string="College Teacher">
                <sheet>
                        <header>
                             <button name="action_export_excel"
                                type="object"
                                string="Export Excel"
                                class="btn-primary"/>
                        </header>
                    <group>
                        <field name="employee_id" />
                        <field name="name"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="age"/>
                        <field name="subject"/>
                        <field name="department"/>
                        <field name="base_salary"/>
                        <field name="final_salary"/>

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="college_teacher_views_list" model="ir.ui.view">
        <field name="name">college.teacher.list</field>
        <field name="model">college.teacher</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="College Teacher">
                <field name="employee_id" />
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="age"/>
                <field name="subject"/>
                <field name="department"/>
                <field name="base_salary"/>
                <field name="final_salary"/>
            </list>
        </field>
    </record>

     <record id="college_teacher_views_kanban" model="ir.ui.view">
        <field name="name">college.teacher.kanban</field>
        <field name="model">college.teacher</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card">
                            <strong>Employee id:<field name="employee_id" /></strong> <br/>
                            <small>Name: <field name="name"/></small><br/>
                            <small>Email: <field name="email"/></small><br/>
                            <small>Phone: <field name="phone"/></small><br/>
                            <small>Age: <field name="age"/></small><br/>
                            <small>Subject: <field name="subject"/></small><br/>
                            <small>Department: <field name="department"/></small><br/>
                            <small>Base Salary: <field name="base_salary"/></small><br/>
                            <small>Final Salary: <field name="final_salary"/></small><br/>

                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="college_staff_views_search" model="ir.ui.view">
        <field name="name">college.staff.search</field>
        <field name="model">college.staff</field>
        <field name="arch" type="xml">
            <search string="Search Staff">
                <!-- Quick search fields -->
                <field name="name" string="Name"/>
            </search>
        </field>
    </record>


</odoo>
