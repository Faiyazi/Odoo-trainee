<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="todo_list_form_owl" model="ir.ui.view">
        <field name="name">todo.list.owl.form_view</field>
        <field name='model'>todo.list.owl</field>
        <field name='arch' type='xml'>
            <form>
                <sheet>
                    <group name="name">
                        <field name="name" />
                        <field name="color" widget='color' />
                        <field name="completed" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="todo_list_list_view_owl" model="ir.ui.view">
        <field name="name">todo.list.owl.list_view</field>
        <field name='model'>todo.list.owl</field>
        <field name='arch' type='xml'>
            <list>

                <field name="name" />
                <field name="color" widget='color' />
                <field name="completed" />

            </list>
        </field>
    </record>


    <record id="owl_todo_list_form" model="ir.actions.act_window">
        <field name="name">OWL todo list</field>
        <field name='res_model'>todo.list.owl</field>
        <field name="view_mode">list,form</field>
    </record>


</odoo>