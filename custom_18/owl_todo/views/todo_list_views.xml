<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="owl_todo_list_view" model="ir.ui.view">
        <field name="name">owl.todo.list.view</field>
        <field name="model">owl.todolist</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="color" widget="color"/>
                <field name="completed"/>
            </list>
        </field>
    </record>

    <record id="owl_todo_form_view" model="ir.ui.view">
        <field name="name">owl.todo.form.view</field>
        <field name="model">owl.todolist</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="color" widget="color"/>
                        <field name="completed"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_owl_todo_list" model="ir.actions.act_window">
        <field name="name">Todo List</field>
        <field name="res_model">owl.todolist</field>
        <field name="view_mode">list,form</field>
    </record>

    <record  id="action_todo_list_js" model="ir.actions.client">
        <field name="name">Todo List Owl</field>
        <field name="tag">owl.action_todo_list_js</field>
    </record>

    <menuitem name="ToDoApp" id="menu_owl_todo_root"/>
        <menuitem name="ToDo List" id="menu_owl_todo_list" sequence="10"
                  action="action_owl_todo_list" parent="menu_owl_todo_root"/>
        <menuitem name="ToDo List OWL" id="menu_owl_todo_list_js" sequence="10"
                  action="action_todo_list_js" parent="menu_owl_todo_root"/>


</odoo>