<?xml version="1.0"?>
<odoo>
    <!-- Model : sale.order -->
    <!-- SO Form Inherit -->
    <record id="view_order_form_credit_mang" model="ir.ui.view">
        <field name="name">sale.order.form.mang</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="total_credit_limit" invisible= "login_company != 'FUGEN UK LTD'" widget="monetary"/>
                <field name="current_credit_limit" invisible= "login_company != 'FUGEN UK LTD'" widget="monetary"/>
                <field name="open_account_value" invisible= "login_company != 'FUGEN UK LTD'" widget="monetary"/>
                <field name="total_over_due" invisible= "login_company != 'FUGEN UK LTD'" widget="monetary" />
            </xpath>
        </field>
    </record>
</odoo>