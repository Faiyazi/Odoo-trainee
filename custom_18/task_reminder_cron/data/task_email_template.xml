<?xml version="1.0"?>
<odoo>
        <record id="email_template_task_reminder" model="mail.template">
            <field name="name">Project Task Email</field>
            <field name="model_id" ref="project.model_project_task"/>
            <field name="email_from">{{user.email or 'admin@example.com'}}</field>
            <field name="email_to">chiragbharda8775@gmail.com</field>
            <field name="subject">Reminder:Completed Your Task</field>
            <field name="body_html" type="html">
                <div style="font-size: 14px;">
                        <p>Dear</p>

                    <p>This is a reminder for your assigned task:</p>
                    <ul>
                        <li>
                            <strong>Task:</strong>
                            <t t-out="object.name" /><br/>

                            <strong>Deadline:</strong><br/>
                            <t t-out="object.date_deadline" />

                        </li>
                    </ul>
                    <p>Please make sure to complete it on time.</p>
                    <p>
                        Thanks,<br/>
                        <t t-out="object.name" /><br/>
                        <t t-out="object.email_cc" /><br/>

                    </p>
                </div>
            </field>
        </record>
</odoo>
