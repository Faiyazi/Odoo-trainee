<?xml version="1.0"?>
<odoo>
    <record id="email_template_timesheet_reminder" model="mail.template">
        <field name="name">Project Timesheet Email</field>
        <field name="model_id" ref="hr_timesheet.model_account_analytic_line"/>
        <field name="email_from">{{user.email or 'admin@example.com'}}</field>
        <field name="email_to">chiragbharda8775@gmail.com</field>
        <field name="subject">Daily Timesheet Report</field>
        <field name="body_html" type="html">
            <div style="font-size: 14px;">
                <p>Hello ,</p>
                <p>This is the daily timesheet report for your project <b><t t-out="object.project_id.name"/></b></p>

                    <li>
                        <strong>Employee:</strong>
                        <t t-out="object.employee_id.name"/>
                        <br/>
                        <strong>Task:</strong>
                        <t t-out="object.name"/>
                        <br/>
                        <strong>Hours Spent:</strong>
                        <t t-out="object.unit_amount"/>
                        <br/>
                        <strong>Date:</strong>
                        <t t-out="object.date"/>

                    </li>

            <br/>
                <p>Regards,
                    <br/>
                    <t t-out="object.name"/>
                </p>
            </div>
        </field>
    </record>
</odoo>
