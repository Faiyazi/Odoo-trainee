<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_sale_excel_wizard" model="ir.ui.view">
        <field name="name">sale.excel.wizard.form</field>
        <field name="model">sale.excel.wizard</field>
        <field name="arch" type="xml">
            <form string="Export Sale Excel">
                <group>
                    <field name="excel_file" filename="sale_order_filename"
       widget="binary" options="{'accept': '.xlsx'}"/>
                </group>
                <footer>
                    <button name="action_export_excel"
                            type="object"
                            string="import"
                            class="btn-primary"/>
                    <button string="close" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="action_sale_excel_wizard" model="ir.actions.act_window">
        <field name="name">Sale Excel Wizard</field>
        <field name="res_model">sale.excel.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_sale_excel_wizard"/>
        <field name="target">new</field>
        <field name="context">{'default_sale_order_id': active_id}</field>
    </record>

    <record id="sale_excel_inherit" model="ir.ui.view">
        <field name="name">res.sale.excel.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <header position="inside">
                <button name="%(action_sale_excel_wizard)d"
                        type="action"
                        string="Excel"
                        class="btn-primary"/>
            </header>
        </field>
    </record>


</odoo>