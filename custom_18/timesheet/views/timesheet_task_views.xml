<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="timesheet_list_view" model="ir.ui.view">
        <field name="name">timesheet.list.view</field>
        <field name="model">timesheet.task</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Timesheet">
                <field name="name"/>
                <field name="date"/>
                <field name="description"/>
                <field name="hours_spent"/>
            </list>
        </field>
    </record>

    <record id="timesheet_form_view" model="ir.ui.view">
    <field name="name">timesheet.form.view</field>
    <field name="model">timesheet.task</field>
    <field name="type">form</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="description"/>
                    <field name="hours_spent"/>
                </group>
            </sheet>
        </form>
    </field>
</record>

    <record id="timesheet_kanban_view" model="ir.ui.view">
        <field name="name">timesheet.kanban.view</field>
        <field name="model">timesheet.task</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
        <kanban default_group_by="date">
                <field name="name"/>
                <field name="date"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <strong><field name="name"/> </strong>
                            <field name="date"/>
                            <field name="description"/>
                            <field name="hours_spent"/>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="timesheet_search_view" model="ir.ui.view">
        <field name="name">timesheet.search.view</field>
        <field name="model">timesheet.task</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
        <search string="Search Timesheet Tasks">
                <field name="name"/>
                <field name="date"/>
                <field name="description"/>
                <field name="hours_spent"/>
                <group expand="0" string="Group By">
                    <filter name="Group_by_date" string="Date" context="{'group_by':'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="timesheet_calendar_view" model="ir.ui.view">
        <field name="name">timesheet.calendar.view</field>
        <field name="model">timesheet.task</field>
        <field name="type">calendar</field>
        <field name="arch" type="xml">
                <calendar string="task calendar" date_start="date">
                    <field name="name"/>
                    <field name="hours_spent"/>
                </calendar>
        </field>
    </record>

    <record id="timesheet_graph_view" model="ir.ui.view">
        <field name="name">timesheet.graph.view</field>
        <field name="model">timesheet.task</field>
        <field name="type">graph</field>
        <field name="arch" type="xml">
            <graph string="Hours by Task" type="bar">
                    <field name="name"/>
                    <field name="hours_spent" type="measure"/>
                </graph>
        </field>
    </record>

    <record id="timesheet_action" model="ir.actions.act_window">
        <field name="name">Timesheet Task</field>
        <field name="res_model">timesheet.task</field>
        <field name="view_mode">list,form,kanban,calendar,graph</field>
    </record>

    <menuitem
        id="timesheet_menu"
        name="Timesheet Task"
        action="timesheet_action"
        sequence="1"
    />

</odoo>
