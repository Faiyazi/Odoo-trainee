<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="project_task_inherit_view_form" model="ir.ui.view">
        <field name="name">project.task.view.form.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="progress_percentage" />
            </xpath>
        </field>
    </record>

    <record id="project_task_inherit_view_kanban" model="ir.ui.view">
        <field name="name">project.task.view.kanban.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_kanban" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="progress_percentage" />
            </xpath>
        </field>
    </record>

