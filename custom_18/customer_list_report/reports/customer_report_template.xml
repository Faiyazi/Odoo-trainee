<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--    Report Template-->
    <template id="report_customer_list">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">


                    <h2>Customer PDF Report</h2>
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Customer Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="env['res.partner'].search([], order='name asc')" t-as="o">
                                <tr >
                                    <td>
                                        <t t-esc="o.name or 'No Name'"/>
                                    </td>
                                    <td>
                                        <t t-esc="o.email or 'No Email'"/>
                                    </td>
                                    <td>
                                        <t t-esc="o.phone or 'No Phone'"/>
                                    </td>
                                </tr>
                            </t>

                        </tbody>
                    </table>
                </div>

            </t>
        </t>

    </template>
</odoo>

