<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_order_wizard_view_form" model="ir.ui.view">
        <field name="name">sale.order.wizard.view.form</field>
        <field name="model">sale.order.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="sale_id" />
                        <field name="file" />
                    </group>
                    <footer>
                        <button string="Import" name="action_import" type="object" class="btn-primary"/>
                        <button string="cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_sale_order_wizard" model="ir.actions.act_window">
        <field name="name">import excel file</field>
        <field name="res_model">sale.order.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
