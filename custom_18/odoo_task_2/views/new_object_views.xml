<odoo>
    <data>
        <!-- explicit form view definition -->
        <record id="new_object_views_form" model="ir.ui.view">
            <field name="name">new.object.views.form</field>
            <field name="model">new.object</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- explicit list view definition -->
        <record id="new_object_views_list" model="ir.ui.view">
            <field name="name">new.object.views.list</field>
            <field name="model">new.object</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                </list>
            </field>
        </record>

        <!-- actions -->
        <record id="action_new_object_views" model="ir.actions.act_window">
            <field name="name">New Object</field>
            <field name="res_model">new.object</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Top menu item -->
        <menuitem name="Odoo Task2" id="odoo_task2_menu_root" sequence="11" />

        <!-- Sub menu item -->
        <menuitem name="New Object" id="new_object_submenu" parent="odoo_task2_menu_root"  action="action_new_object_views"/>

    </data>
</odoo>
