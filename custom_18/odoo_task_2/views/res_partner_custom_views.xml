<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Tree & Form View for Custom Category -->
    <record id="view_partner_category_custom_tree" model="ir.ui.view">
        <field name="name">partner.category.custom.tree</field>
        <field name="model">partner.category.custom</field>
        <field name="arch" type="xml">
            <list string="Custom Categories">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_partner_category_custom_form" model="ir.ui.view">
        <field name="name">partner.category.custom.form</field>
        <field name="model">partner.category.custom</field>
        <field name="arch" type="xml">
            <form string="Custom Category">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Menu and Action for Custom Category -->
    <record id="action_partner_category_custom" model="ir.actions.act_window">
        <field name="name">Custom Categories</field>
        <field name="res_model">partner.category.custom</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_partner_category_custom_root"
              name="Custom Categories"
              parent="contacts.menu_contacts"
              action="action_partner_category_custom"/>

    <!-- Extend Contact Form -->
    <record id="view_partner_form_inherit_custom_category" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.custom.category</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="category_id" position="after">
                <field name="custom_category_id"/>
            </field>
        </field>
    </record>

</odoo>
