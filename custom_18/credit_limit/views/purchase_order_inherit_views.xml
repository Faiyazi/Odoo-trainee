<odoo>
    <record id="added_stage_from_inherit_po_views" model="ir.ui.view">
        <field name="name">added.stage.from.inherit.po.views</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_first_approval" type="object" class="btn-primary" string="First Approval"/>
                <button name="action_second_approval" type="object" class="btn-primary" string="Second Approval"/>


            </xpath>
        </field>
    </record>
</odoo>
