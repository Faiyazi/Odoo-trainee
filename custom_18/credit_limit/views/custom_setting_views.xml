<odoo>
<record id="added_credit_from_inherit_setting_views" model="ir.ui.view">
    <field name="name">added.credit.from.inherit.setting.views</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
    <field name="arch" type="xml">
       <xpath expr="//block[@name='users_setting_container']" position="after">
                <block title="Credit Settings">
                    <setting string="Credit Limit">
                        <field name="credit_limit"/>
                    </setting>
                </block>
            </xpath>
    </field>
</record>
</odoo>