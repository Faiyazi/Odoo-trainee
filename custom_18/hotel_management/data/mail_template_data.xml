<odoo>
  <record id="mail_template_reservation_confirm" model="mail.template">
    <field name="name">Reservation Confirmation</field>
    <field name="model_id" ref="model_hotel_reservation"/>
    <field name="subject">Reservation ${object.name} Confirmed</field>
    <field name="email_to">${object.partner_id.email or ''}</field>
    <field name="body_html"><![CDATA[
      <p>Dear ${object.partner_id.name},</p>
      <p>Your reservation <b>${object.name}</b> has been confirmed.</p>
      <p>Check-in: ${object.checkin} <br/> Check-out: ${object.checkout}</p>
      <p>Thank you!</p>
    ]]></field>
  </record>
</odoo>
