<odoo>
  <record id="view_hotel_checkout_wizard_form" model="ir.ui.view">
    <field name="name">hotel.checkout.wizard.form</field>
    <field name="model">hotel.checkout.wizard</field>
    <field name="arch" type="xml">
      <form string="Check Out">
        <group>
          <field name="reservation_id"/>
          <field name="folio_id" readonly="1"/>
          <field name="create_invoice"/>
        </group>
        <footer>
          <button string="Check Out" type="object" name="action_checkout" class="btn-primary"/>
          <button string="Cancel" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>
  <record id="action_hotel_checkout_wizard" model="ir.actions.act_window">
    <field name="name">Check Out</field>
    <field name="res_model">hotel.checkout.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>
</odoo>
