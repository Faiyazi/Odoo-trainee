<odoo>
  <record id="view_housekeeping_task_tree" model="ir.ui.view">
    <field name="name">hotel.housekeeping.task.list</field>
    <field name="model">hotel.housekeeping.task</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="room_id"/>
        <field name="assigned_user_id"/>
        <field name="date"/>
        <field name="state"/>
      </list>
    </field>
  </record>

  <record id="view_housekeeping_task_form" model="ir.ui.view">
    <field name="name">hotel.housekeeping.task.form</field>
    <field name="model">hotel.housekeeping.task</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="room_id"/>
            <field name="assigned_user_id"/>
            <field name="date"/>
            <field name="state"/>
          </group>
          <chatter/>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
