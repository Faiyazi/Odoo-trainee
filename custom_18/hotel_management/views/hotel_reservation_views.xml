<odoo>
  <record id="view_hotel_reservation_tree" model="ir.ui.view">
    <field name="name">hotel.reservation.list</field>
    <field name="model">hotel.reservation</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="partner_id"/>
        <field name="room_id"/>
        <field name="checkin"/>
        <field name="checkout"/>
        <field name="state"/>
        <field name="price_total"/>
      </list>
    </field>
  </record>

  <record id="view_hotel_reservation_form" model="ir.ui.view">
    <field name="name">hotel.reservation.form</field>
    <field name="model">hotel.reservation</field>
    <field name="arch" type="xml">
      <form string="Reservation">
        <header>
          <button name="action_confirm" type="object" string="Confirm" />
          <button name="action_checkin" type="object" string="Check In" />
          <button name="action_checkout" type="object" string="Check Out" />
          <field name="state" widget="statusbar" />
        </header>
        <sheet>
          <group>
            <field name="name" readonly="1"/>
            <field name="partner_id"/>
            <field name="room_id"/>
            <field name="rate_plan_id"/>
            <field name="checkin"/>
            <field name="checkout"/>
            <field name="adults"/>
            <field name="children"/>
            <field name="price_subtotal" readonly="1"/>
            <field name="price_total" readonly="1"/>
            <field name="folio_id" readonly="1"/>
          </group>
          <notebook>
            <page string="Services">
              <field name="service_line_ids">
                <list editable="bottom">
                  <field name="description"/>
                  <field name="product_id"/>
                  <field name="quantity"/>
                  <field name="price_unit"/>
                  <field name="tax_ids"/>
                  <field name="price_subtotal" readonly="1"/>
                </list>
              </field>
            </page>
          </notebook>
          <chatter/>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_hotel_reservation_calendar" model="ir.ui.view">
    <field name="name">hotel.reservation.calendar</field>
    <field name="model">hotel.reservation</field>
    <field name="arch" type="xml">
      <calendar string="Reservations" date_start="checkin" date_stop="checkout" color="room_id">
        <field name="name"/>
      </calendar>
    </field>
  </record>
</odoo>
