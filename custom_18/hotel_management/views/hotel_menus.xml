<odoo>
  <menuitem id="menu_hotel_root" name="Hotel" sequence="10" />
  <menuitem id="menu_hotel_frontdesk" name="Front Desk" parent="menu_hotel_root" sequence="10" />
  <menuitem id="menu_hotel_rooms" name="Rooms" parent="menu_hotel_root" sequence="20" />
  <menuitem id="menu_hotel_pricing" name="Pricing" parent="menu_hotel_root" sequence="30" />
  <menuitem id="menu_hotel_reporting" name="Reporting" parent="menu_hotel_root" sequence="40" />

  <record id="action_hotel_rooms" model="ir.actions.act_window">
    <field name="name">Rooms</field>
    <field name="res_model">hotel.room</field>
    <field name="view_mode">list,form,kanban</field>
  </record>
  <menuitem id="menu_hotel_rooms_action" name="Rooms" parent="menu_hotel_rooms"
    action="action_hotel_rooms" />

  <record id="action_hotel_reservations" model="ir.actions.act_window">
    <field name="name">Reservations</field>
    <field name="res_model">hotel.reservation</field>
    <field name="view_mode">list,form,calendar,gantt</field>
  </record>
  <menuitem id="menu_hotel_reservations_action" name="Reservations" parent="menu_hotel_frontdesk"
    action="action_hotel_reservations" />

  <record id="action_hotel_folios" model="ir.actions.act_window">
    <field name="name">Folios</field>
    <field name="res_model">hotel.folio</field>
    <field name="view_mode">list,form</field>
  </record>
  <menuitem id="menu_hotel_folios_action" name="Folios" parent="menu_hotel_frontdesk"
    action="action_hotel_folios" />

  <record id="action_hotel_rate_plans" model="ir.actions.act_window">
    <field name="name">Rate Plans</field>
    <field name="res_model">hotel.rate.plan</field>
    <field name="view_mode">list,form</field>
  </record>
  <menuitem id="menu_hotel_rate_plans_action" name="Rate Plans" parent="menu_hotel_pricing"
    action="action_hotel_rate_plans" />

  <record id="action_hotel_seasons" model="ir.actions.act_window">
    <field name="name">Seasons</field>
    <field name="res_model">hotel.season</field>
    <field name="view_mode">list,form</field>
  </record>
  <menuitem id="menu_hotel_seasons_action" name="Seasons" parent="menu_hotel_pricing"
    action="action_hotel_seasons" />

  <record id="action_hotel_housekeeping" model="ir.actions.act_window">
    <field name="name">Housekeeping</field>
    <field name="res_model">hotel.housekeeping.task</field>
    <field name="view_mode">list,form,kanban</field>
  </record>
  <menuitem id="menu_hotel_housekeeping_action" name="Housekeeping" parent="menu_hotel_rooms"
    action="action_hotel_housekeeping" />
</odoo>