<odoo>
  <record id="view_hotel_folio_tree" model="ir.ui.view">
    <field name="name">hotel.folio.list</field>
    <field name="model">hotel.folio</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="amount_total"/>
        <field name="invoice_id"/>
        <field name="payment_state"/>
      </list>
    </field>
  </record>

  <record id="view_hotel_folio_form" model="ir.ui.view">
    <field name="name">hotel.folio.form</field>
    <field name="model">hotel.folio</field>
    <field name="arch" type="xml">
      <form string="Folio">
        <header>
          <button name="action_create_invoice" type="object" string="Create Invoice" />
        </header>
        <sheet>
          <group>
            <field name="name" readonly="1"/>
            <field name="reservation_ids" context="{'default_folio_id': id}"/>
            <field name="amount_untaxed" readonly="1"/>
            <field name="amount_total" readonly="1"/>
            <field name="invoice_id" readonly="1"/>
            <field name="payment_state" readonly="1"/>
          </group>
          <notebook>
            <page string="Lines">
              <field name="line_ids">
                <list editable="bottom">
                  <field name="description"/>
                  <field name="product_id"/>
                  <field name="quantity"/>
                  <field name="price_unit"/>
                  <field name="tax_ids"/>
                  <field name="price_subtotal" readonly="1"/>
                </list>
              </field>
            </page>
          </notebook>
          <chatter/>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
