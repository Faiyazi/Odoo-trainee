<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_report_pdf_export" model="ir.actions.report">
        <field name="name">Export Task In PDF</field>
        <field name="model">export.task.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">project_custom.pdf_task_report</field>
        <field name="report_file">project_custom.pdf_task_report</field>
        <field name="print_report_name">'Tasks_' + object.date_start.strftime('%Y%m%d')</field>
        <field name="binding_model_id" ref="model_export_task_wizard"/>
        <field name="binding_type">report</field>
    </record>

    <record id="action_report_excel_export" model="ir.actions.report">
        <field name="name">Export Task In Excel</field>
        <field name="model">export.task.wizard</field>
        <field name="report_type">xlsx</field>
        <field name="report_name">project_custom.task_report_excel</field>
        <field name="binding_model_id" ref="model_export_task_wizard"/>
    </record>

</odoo>
