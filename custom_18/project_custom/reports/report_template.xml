<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_task_overlapping_report">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">

                    <h2>Project Overlapping Task Report</h2>

                    <table class="table table-sm o_main_table">
                        <thead>
                            <tr>
                                <th>Task</th>
                                <th>Project</th>
                                <th>Assigned To</th>
                                <th>Start Date</th>
                                <th>Deadline</th>
                            </tr>
                        </thead>

                        <tbody>

                            <t t-foreach="docs" t-as="o">
                                <tr>
                                    <td><t t-out="o.name"/></td>
                                    <td><t t-out="o.project_id.name"/></td>
                                    <td>
                                        <t t-foreach="o.user_ids" t-as="assignee">
                                            <span><t t-out="assignee.name"/></span><br/>
                                        </t>
                                    </td>
                                    <td><t t-out="o.date_assign"/></td>
                                    <td><t t-out="o.date_deadline"/></td>
                                </tr>
                            </t>

                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
