<odoo>
    <!-- Wizard Form View -->
    <record id="project_task_report_view_form" model="ir.ui.view">
        <field name="name">Task Overlapping Wizard Form</field>
        <field name="model">project.task.report</field>
        <field name="arch" type="xml">
            <form string="Task Overlapping Wizard ">
                <group>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>
                <footer>
                    <button string="PDF Report" type="object" name="action_project_task_report_pdf" class="btn-primary"/>
                    <button string="Excel Report" type="object" name="action_project_task_report_excel" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard Action -->
    <record id="action_project_task_report" model="ir.actions.act_window">
        <field name="name">Overlapping Task Wizard</field>
        <field name="res_model">project.task.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- PDF Report Action -->
    <record id="action_report_overlapping_tasks" model="ir.actions.report">
        <field name="name">Overlapping Task Report</field>
        <field name="model">project.task</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">project_custom.report_task_overlapping_report</field>
        <field name="report_file">project_custom.report_task_overlapping_report</field>
    </record>

    <!-- Excel Report Action -->
    <record id="action_report_overlapping_tasks_excel" model="ir.actions.report">
        <field name="name">Overlapping Task Excel Report</field>
        <field name="model">project.task</field>
        <field name="report_type">xlsx</field>
        <field name="report_name">project_custom.report_task_overlapping_excel</field>
        <field name="report_file">project_custom.report_task_overlapping_excel</field>
    </record>

    <menuitem id="menu_project_task_report_wizard"
              name="Overlapping Task"
              parent="project.menu_main_pm"
              action="action_project_task_report"
    />

</odoo>
