<odoo>

    <record id="view_task_list_ordered" model="ir.ui.view">
        <field name="name">project.task.list.ordered</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.open_view_all_tasks_list_view" />
        <field name="arch" type="xml">
            <list position="attributes">
                <attribute name="default_order">name</attribute>
            </list>
        </field>
    </record>

    <record id="view_task_kanban_ordered" model="ir.ui.view">
        <field name="name">project.task.kanban.ordered</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_kanban_inherit_all_task" />
        <field name="arch" type="xml">
            <kanban position="attributes">
                <attribute name="default_order">name</attribute>
            </kanban>
        </field>
    </record>

