<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="export_task_wizard_view_form" model="ir.ui.view">
        <field name="name">export.task.wizard.view.form</field>
        <field name="model">export.task.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="date_start" />
                        <field name="date_end" />
                    </group>
                    <footer>
                        <button string="Export PDF" type="object" class="btn-primary"
                            name="action_export_task" />
                        <button string="Export Excel" type="object" class="btn-primary"
                            name="action_export_task_excel" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_export_task_wizard" model="ir.actions.act_window">
        <field name="name">Export Task</field>
        <field name="res_model">export.task.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>