    <template id="report_customer_pdf">
        <t t-call="web.external_layout">
            <main>
                <div class="page">
                    <!-- Show Company Logo once -->
                    <t t-foreach="docs[:1]" t-as="d">
                         <t t-if="d.company_id and d.company_id.logo">
                            <div>
                                <img t-att-src="image_data_uri(d.company_id.logo)"
                                     style="max-height: 40pt; max-width: 200pt;" alt="Company Logo"/>
                            </div>
                        </t>

                    </t>

                    <!-- Customer Table -->
                    <table style="width: 100%; height: 100%;" class="table-border">
                        <thead>
                            <tr>
                                <th>Customer Name</th>
                                <th>Email</th>
                                <th>Phone Number</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="sorted(docs, key=lambda d: d.name or '')" t-as="detail">
                                
                                <tr>
                                    <td>
                                        <t t-out="detail.name"/>
                                    </td>
                                    <td>
                                        <t t-out="detail.email"/>
                                    </td>
                                    <td>
                                        <t t-out="detail.phone"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </main>
        </t>
    </template>

