        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='sales_purchases']" position="inside">
                <group>
                    <field name="restrict_mail"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
