<?xml version="1.0"?>
<odoo>
        <record id="email_template_student_admission" model="mail.template">
            <field name="name">Student Admission Email</field>
            <field name="model_id" ref="college_erp.model_college_student_admission"/>
            <field name="email_from">{{user.email}}</field>
            <field name="email_to">{{object.email}}</field>  <!-- make sure 'email' exists in your model -->
            <field name="subject">Admission Conformed</field>
           <field name="body_html" type="html">
                <div style="font-size: 14px;">
                <p>Dear <t t-out="object.student_name or ''"/>,</p>

                <p>Welcome to Caret IT Solution!</p>

                <p>
                    Here are your admission details:
                    <br/> <b>Student ID:</b> <t t-out="object.name"/>
                    <br/> <b>Name:</b> <t t-out="object.student_name"/>
                    <br/> <b>Email:</b> <t t-out="object.email"/>
                    <br/> <b>Phone:</b> <t t-out="object.phone"/>
                    <br/> <b>Fees Paid:</b> <t t-out="object.fees_paid"/>
                    <br/> <b>Admission Date:</b> <t t-out="object.admission_datetime"/>
                </p>

                <p>We are excited to have you with us.</p>

                <p>
                    Thanks,<br/>
                    <t t-out="user.name"/><br/>
                    <t t-if="user.email">Email: <t t-out="user.email"/></t><br/>
                    <t t-if="user.phone">Phone: <t t-out="user.phone"/></t>
                </p>
            </div>
            </field>
        </record>
</odoo>
