<odoo>
    <!-- HelloWorld Action -->
    <record id="action_hello_world" model="ir.actions.client">
        <field name="name">Hello World</field>
        <field name="tag">owl_demo.hello_world_action</field>
    </record>

    <!-- Counter Action -->
    <record id="action_counter_demo" model="ir.actions.client">
        <field name="name">Counter Demo</field>
        <field name="tag">owl_demo.counter_action</field>
    </record>

    <!-- Root Menu -->
    <menuitem id="menu_owl_root" name="Owl Demo"/>

    <!-- HelloWorld Menu -->
    <menuitem id="menu_hello_world"
              name="Hello World"
              parent="menu_owl_root"
              sequence="1"
              action="action_hello_world"/>

    <!-- Counter Menu -->
    <menuitem id="menu_counter_demo"
              name="Counter Demo"
              parent="menu_owl_root"
              sequence="2"
              action="action_counter_demo"/>
</odoo>





