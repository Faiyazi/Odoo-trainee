<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

            <!-- HelloWorld template -->
        <t t-name="owl_demo.HelloWorldTemplate">
            <div class="text-center mt-4">
                <h2 style="color: green;">Hello World from Owl in Odoo 18!</h2>
                <p>This is your first Owl component rendered inside a backend menu page.</p>
            </div>
        </t>

            <!-- Counter template -->
    <t t-name="owl_demo.CounterTemplate">
        <div class="text-center mt-4">
            <h2 class="mb-3">Counter Example</h2>
            <h3  class="mb-4 text-primary"><t t-esc="state.count"/></h3>
            <button class="btn btn-success me-3 px-4 py-2" t-on-click="increment"> INCR </button>
            <button  class="btn btn-danger px-4 py-2" t-on-click="decrement"> DECR </button>
        </div>
    </t>
</templates>
