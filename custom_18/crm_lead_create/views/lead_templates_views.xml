<odoo>
    <template id="crm_lead_template" name="Lead Form">

        <t t-call="website.layout">

            <div class="container d-flex justify-content-center">
                <form action="/lead/submit_button" method="post" class="mt-5" style="max-width: 500px; width: 100%;">
                    <h2 class="text-center mb-4">Lead Form</h2>

                    <div class="mb-3">
                        <label class="form-label">Name <span class="text-danger">*</span></label>
                        <input type="text" name="name" class="form-control" required="required"/>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Email <span class="text-danger">*</span></label>
                        <input type="email" name="email" class="form-control" required="required"/>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Partner <span class="text-danger">*</span></label>
                        <select name="partner_id" class="form-control">
                            <option value="">Select Partner</option>
                            <t t-foreach="customer_name" t-as="p">
                                <option t-att-value="p.id"><t t-esc="p.name"/></option>
                            </t>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Phone <span class="text-danger">*</span></label>
                        <input type="text" name="phone" class="form-control" required="required"/>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Probability <span class="text-danger">*</span></label>
                        <input type="number" name="probability" class="form-control" required="required"/>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Expected Revenue <span class="text-danger">*</span></label>
                        <input type="number" name="expected_revenue" class="form-control" required="required"/>
                    </div>

                    <div class="d-flex justify-content-center mt-4">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>

                </form>
            </div>

        </t>
    </template>
</odoo>
