<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="project_email_template" model="mail.template">
            <field name="name">Project Notification</field>
            <field name="model_id" ref="project.model_project_project"/>
            <field name="subject">Update for Project: {{object.display_name}}</field>
            <field name="email_from">{{user.email}}</field>
            <field name="email_to">{{object.contact_email}}</field>
            <field name="body_html" type="html">

                <div style="margin: 20px; padding: 50px; font-family: Arial, sans-serif;">
                    <p style="font-size: 15px;">
                        Hello
                    </p>
                    
                    <p style="font-size: 13px;">
                        This is a notification regarding project: <b><t t-out="object.display_name or ''"></t></b>
                    </p>

                    <p>
                        Regards,<br/>Odoo System
                    </p>

                </div>
                
            </field>
        </record>

</odoo>




                