<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="project_project_inherit_view_form" model="ir.ui.view">
        <field name="name">project.project.inherit.view.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                
                    <button name="action_send_email" type="object" class="btn-primary"
                        string="Send Email">
                    </button>
                
            </xpath>
        </field>
    </record>

    <record id="project_project_inherit_view_form1" model="ir.ui.view">
    <field name="name">project.project.inherit.view.form1</field>
    <field name="model">project.project</field>
    <field name="inherit_id" ref="project.edit_project"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='partner_id']" position="after">
            <field name="contact_email"/>
        </xpath>
    </field>
</record>

    

</odoo>