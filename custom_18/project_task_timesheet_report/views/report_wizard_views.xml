<odoo>
    <!-- Wizard Form View -->
    <record id="project_task_report_view_form" model="ir.ui.view">
        <field name="name">Task Timesheet Report Wizard Form</field>
        <field name="model">project.task.report</field>
        <field name="arch" type="xml">
            <form string="Task Timesheet Report Wizard ">
                <group>
                    <field name="date_start"/>
                    <field name="date_end"/>
                </group>
                <footer>
                    <button string="PDF Report" type="object" name="action_project_task_report_pdf"
                            class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard Action -->
    <record id="action_project_task_report" model="ir.actions.act_window">
        <field name="name">Task Timesheet Report Wizard</field>
        <field name="res_model">project.task.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- PDF Report Action -->
    <record id="action_report_task_timesheet" model="ir.actions.report">
        <field name="name">Task Timesheet Report</field>
        <field name="model">project.task</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">project_task_timesheet_report.report_task_timesheet</field>
        <field name="report_file">project_task_timesheet_report.report_task_timesheet</field>
        <field name="print_report_name">'Task Timesheet Report'</field>

    </record>

    <menuitem id="menu_project_task_report_wizard"
              name="Task Timesheet Report"
              parent="project.menu_project_report"
              action="action_project_task_report"
              sequence="60"/>

</odoo>
