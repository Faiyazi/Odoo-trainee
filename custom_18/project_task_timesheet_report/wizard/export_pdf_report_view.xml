<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="export_pdf_report_view_form" model="ir.ui.view">
        <field name="name">export.pdf.report.view.form</field>
        <field name="model">export.pdf.report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="date_start" />
                        <field name="date_end" />
                    </group>
                    <footer>
                        <button string="Generate PDF Report" name="action_export_pdf" type="object"
                            class="btn-primary" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_export_pdf_report" model="ir.actions.act_window">
        <field name="name">Export PDF</field>
        <field name="res_model">export.pdf.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>



