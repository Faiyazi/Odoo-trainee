<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_task_timesheet">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">

                    <h2>Project Task Timesheet Report</h2>

                    <p>Date From:
                        <t t-esc="date_start"/>
                        - Date To:
                        <t t-esc="date_end"/>
                    </p>

                    <t t-foreach="projects" t-as="project_data">
                        <h2 style="background-color:#00FFFF; padding:0px 20px; color:black;">
                            Project:
                            <t t-esc="project_data['project'].name"/>
                        </h2>

                        <t t-foreach="project_data['tasks']" t-as="task_data">
                            <h3 style="margin-top:10px;" >Task:
                                <t t-esc="task_data['task'].name"/>
                            </h3>

                            <table class="table table-sm table-bordered">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Employee</th>
                                        <th>Description</th>
                                        <th>Hours</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="task_data['timesheets']" t-as="line">
                                        <tr>
                                            <td>
                                                <t t-esc="line.date"/>
                                            </td>
                                            <td>
                                                <t t-esc="line.employee_id.name"/>
                                            </td>
                                            <td>
                                                <t t-esc="line.name"/>
                                            </td>
                                            <td>
                                                <t t-esc="line.unit_amount"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                            <p>
                                <b>Total Hours for Task:
                                    <t t-esc="task_data['total_hours']"/>
                                </b>
                            </p>
                        </t>
                        <p>
                            <b>Total Hours for Project:
                                <t t-esc="project_data['total_hours']"/>
                            </b>
                        </p>
                        <hr/>
                    </t>
                </div>
            </t>
        </t>
    </template>
</odoo>
