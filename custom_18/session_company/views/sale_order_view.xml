<?xml version="1.0"?>
<odoo>
    <!-- Model : sale.order -->
    <!-- SO Form Inherit -->
    <record id="view_order_form_session_company" model="ir.ui.view">
        <field name="name">sale.order.form.session.company</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="login_company" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='order_line']" position="before">
                <field name="login_company" invisible="1"/> 
            </xpath>
        </field>
    </record>
</odoo>
