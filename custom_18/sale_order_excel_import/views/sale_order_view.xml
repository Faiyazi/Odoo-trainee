<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Example: window action -->
    <record id="action_open_wizard" model="ir.actions.act_window">
        <field name="name">Import Excel Wizard</field>
        <field name="res_model">sale.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Example: sale order view with button -->
    <record id="sale_order_form_wizard_button" model="ir.ui.view">
        <field name="name">sale_order_form_wizard_button</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <header>
                <button name="%(sale_order_excel_import.action_open_wizard)d"
                        string="Import Excel"
                        type="action"
                        class="btn-primary"
                         />
            </header>
        </field>
    </record>
</odoo>
