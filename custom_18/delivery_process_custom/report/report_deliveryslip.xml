<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_delivery_document_inherit_delivery_process"  inherit_id="stock.report_delivery_document">
        <xpath expr="//div[hasclass('page')]/div/div[@name='div_origin']" position="after">
            <t t-if="o.picking_type_id.code == 'outgoing' and o.login_company == 'FUGEN UK LTD'">
                <div t-if="o.delivery_location_id" class="col-auto" name="div_delivery_location">
                    <strong>Delivery Location:</strong>
                    <p t-field="o.delivery_location_id"/>
                </div>
                <div t-if="o.delivery_truck_id" class="col-auto" name="div_delivery_truck">
                    <strong>Truck:</strong>
                    <p t-field="o.delivery_truck_id"/>
                </div>
                <div t-if="o.truck_type_id" class="col-auto" name="div_delivery_truck_type">
                    <strong>Truck Type:</strong>
                    <p t-field="o.truck_type_id"/>
                </div>
                <div t-if="o.truck_loading_capacity" class="col-auto" name="div_delivery_truck_load">
                    <strong>Loading Capacity:</strong>
                    <div class="row" style="margin: 0px !important;">
                        <p t-field="o.truck_loading_capacity"/>&amp;nbsp;
                        <span>In</span>&amp;nbsp;<p t-field="o.truck_uom_id"/>
                    </div>
                </div>
            </t>
        </xpath>
    </template>
</odoo>