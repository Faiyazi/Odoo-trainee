<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="student_class_view_form" model="ir.ui.view">
        <field name="name">student.class.view.form</field>
        <field name="model">student.class</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="teacher" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="student_class_view_tree" model="ir.ui.view">
        <field name="name">student.class.view.list</field>
        <field name="model">student.class</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="teacher" />
            </list>
        </field>
    </record>

    <record id="action_student_class" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">student.class</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="student_class_menu_action"
        name="Student Class"
        parent="student_menu_action"
        sequence="2"
        action="action_student_class" />

</odoo>