<odoo>

    <record id='view_form_student' model='ir.ui.view'>
        <field name='name'>student.from</field>
        <field name='model'>student.management</field>
        <field name='type'>form</field>
        <field name='arch' type='xml'>
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Female" bg_color="text-bg-danger"
                        invisible="gender != 'female'" />
                    <widget name="web_ribbon" title="Male" bg_color="text-bg-danger"
                        invisible="gender != 'male'" />
                    <group>
                        <field name='student_code' />
                        <field name="name" />
                        <field name="age" />
                        <field name="gpa" />
                        <field name="birth_date" />
                        <field name="gender" />
                        <field name="result" />
                        <field name="address" />
                        <field name="class_id" />
                        <field name="subject_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id='view_list_student' model='ir.ui.view'>
        <field name='name'>student.list</field>
        <field name='model'>student.management</field>
        <field name='type'>list</field>
        <field name='arch' type='xml'>
            <list>
                <field name='student_code' />
                <field name='name' />
                <field name="gender" />
                <field name='class_id' />
                <field name='result' />
            </list>
        </field>
    </record>

    <record id="student_view_kanban" model="ir.ui.view">
        <field name="name">student.view.kanban</field>
        <field name="model">student.management</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>

                    <t t-name="card" class="flex-row">
                        <widget name="web_ribbon" title="Female" bg_color="text-bg-danger"
                            invisible="gender != 'female'" />
                        <widget name="web_ribbon" title="Male" bg_color="text-bg-danger"
                            invisible="gender != 'male'" />
                        <main class="ps-2 ps-md-0">
                            <field name="student_code" class="fw-bold" />
                            <field name="name" />
                            <field name="gender" />
                        </main>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">student.management</field>
        <field name="view_mode">list,form,kanban</field>
    </record>

    <menuitem id="student_menu_action"
        name="Manage Students"
        sequence="1"
        action="action_student" />

</odoo>