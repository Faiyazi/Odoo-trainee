<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hotel_name_view_form" model="ir.ui.view">
        <field name="name">hotel.name.view.form</field>
        <field name="model">hotel.name</field>
        <field name="arch" type="xml">
            <form string="Hotel Name">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="location" />
                            <field name="rate" />
                            
                        </group>
                        <group>
                            <field name="image" widget="image" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Hotel Rooms">
                            <field name="hotel_room_ids" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hotel_name_view_list" model="ir.ui.view">
        <field name="name">hotel.name.view.list</field>
        <field name="model">hotel.name</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="location" />
                <field name="rate" />
            </list>
        </field>
    </record>

    <record id="hotel_name_list_action" model="ir.actions.act_window">
        <field name="name">Hotels List</field>
        <field name="res_model">hotel.name</field>
        <field name="view_mode">list,form,kanban</field>
    </record>

</odoo>