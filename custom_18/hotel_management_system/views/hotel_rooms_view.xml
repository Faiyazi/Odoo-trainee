<odoo>
    <record id="view_hotel_room_tree" model="ir.ui.view">
        <field name="name">hotel.room.list</field>
        <field name="model">hotel.room</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="room_type" />
                <field name="state" />
                <field name="capacity" />
                <field name="floor" />
            </list>
        </field>
    </record>

    <record id="view_hotel_room_form" model="ir.ui.view">
        <field name="name">hotel.room.form</field>
        <field name="model">hotel.room</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="room_type" />
                        <field name="state" />
                        <field name="capacity" />
                        <field name="floor" />
                        <field name="amenity_ids" widget="many2many_tags" />
                        <field name="hotel_list_id" />
                    </group>
                </sheet>
                <chatter />
            </form>
        </field>
    </record>

    <record id="hotel_rooms_action" model="ir.actions.act_window">
        <field name="name">Hotel Rooms</field>
        <field name="res_model">hotel.room</field>
        <field name="view_mode">list,form,kanban</field>
    </record>

</odoo>