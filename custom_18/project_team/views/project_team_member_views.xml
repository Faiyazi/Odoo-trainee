<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_project_team_member_form" model="ir.ui.view">
        <field name="name">project.team.member.form</field>
        <field name="model">project.team.member</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Female" bg_color="text-bg-danger"
                        invisible="gender != 'female'" />
                    <widget name="web_ribbon" title="Male" bg_color="text-bg-danger"
                        invisible="gender != 'male'" />
                    <group>
                        <group>
                            <field name="name" />
                            <field name="user_id" />
                            <span class="o_form_label o_td_label o_address_type" name="address_name">
                                <span>Address</span>
                            </span>
                            <div class="o_address_format">
                                <field name="house_no" placeholder="house_no"
                                    class="o_address_house_no" />
                                <field name="slistt" placeholder="slistt" class="o_address_slistt" />
                                <field name="slistt2" placeholder="slistt2"
                                    class="o_address_slistt" />
                                <field name="city_id" placeholder="City_id" class="o_address_city" />
                                <field name="state_id" placeholder="state id"
                                    class="o_address_state" />
                                <field name="zip_code" placeholder="zip_code"
                                    class="o_address_zip" />
                                <div name="partner_address_country"
                                    class="d-flex justify-content-between">
                                    <field name="country_id" placeholder="Country"
                                        class="o_address_country" />
                                </div>
                            </div>
                        </group>
                        <group>
                            <field name="mobile" widget="phone" />
                            <field name="email_id" widget="email" />
                            <field name="gender" />
                            <field name="birth_date" />
                            <field name="user_image" widget="image" class="oe_avatar" />
                            <field name="bio_data" />
                            <field name="active" widget="boolean_toggle" />
                        </group>
                        <!-- <group>
                            <field name="timesheet_ids" />
                        </group> -->
                    </group>
                    <notebook>
                        <page string='Timesheet'>
                            <field name="timesheet_ids" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_project_team_member_list" model="ir.ui.view">
        <field name="name">project.team.member.list</field>
        <field name="model">project.team.member</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="mobile" />
                <field name="city_id" />
                <field name="state_id" />
                <field name="country_id" />
            </list>
        </field>
    </record>

    <record id="view_project_team_member_kanban" model="ir.ui.view">
        <field name="name">project.team.member.kanban</field>
        <field name="model">project.team.member</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_example">
                <field name="name" />
                <field name="user_id" />
                <field name="mobile" />
                <field name="country_id" />
                <field name="state_id" />
                <field name="city_id" />

                <templates>
                    <t t-name="card" class="flex-row">
                        <widget name="web_ribbon" title="Female" bg_color="text-bg-danger"
                            invisible="gender != 'female'" />
                        <widget name="web_ribbon" title="Male" bg_color="text-bg-danger"
                            invisible="gender != 'male'" />
                        <aside class="o_kanban_aside_full">
                            <t>
                                <field name="user_image" class="w-100" widget="image"
                                    options="{'img_class': 'object-fit-contain w-100 h-100'}" />
                            </t>
                        </aside>
                        <main class="ps-2 ps-md-0">
                            <div class="mb-1">
                                <field name="name" class="mb-0 fw-bold fs-5" />
                                <br />
                                <field class="text-muted" name="user_id" />
                                <br />
                                <field class="text-muted" name="mobile" />
                                <div class="text-muted">
                                    <field name="city_id" /> / <field name="state_id" /> / <field
                                        name="country_id" />
                                </div>
                            </div>
                            <field name="email_id" class="text-truncate" />
                            <footer>
                                <div />
                            </footer>
                        </main>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="project_team_member_view_search" model="ir.ui.view">
        <field name="name">project.team.member.view.search</field>
        <field name="model">project.team.member</field>
        <field name="arch" type="xml">
            <search string="Search Team Member">
                <field name="name" />
                <field name="user_id" />
                <field name="mobile" />
                <field name="city_id" />
                <field name="state_id" />
                <field name="country_id" />
            </search>
        </field>
    </record>

    <record id="action_project_team_member" model="ir.actions.act_window">
        <field name="name">Team Members</field>
        <field name="res_model">project.team.member</field>
        <field name="view_mode">list,form,kanban,search</field>
    </record>

    <!-- <menuitem id="menu_project_team_member" 
            name="Project Team Member" 
            action="action_project_team_member" 
            sequence="1"/> -->
</odoo>