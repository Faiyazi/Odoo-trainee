<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="add_member_wizard_view_form" model="ir.ui.view">
        <field name="name">add.member.wizard.view.form</field>
        <field name="model">add.member.wizard</field>
        <field name="arch" type="xml">
            <form string="Add members to team">
                <sheet>
                    <group>
                        <field name="member_id" />
                    </group>
                    <footer>
                        <button string="Add Member" type="object" class="btn-primary"
                            name="action_add_member" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_add_member_wizard" model="ir.actions.act_window">
        <field name="name">Add Member</field>
        <field name="res_model">add.member.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>