<odoo>
    <record id="view_task_alphabetically_order_list" model="ir.ui.view">
        <field name="name">project.task.inherit.alphabetically.order.list</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.open_view_all_tasks_list_view"/>
        <field name="arch" type="xml">
            <list position="attributes">
                <attribute name="default_order">name</attribute>
            </list>
        </field>
    </record>

      <record id="view_task_alphabetically_order_kanban" model="ir.ui.view">
        <field name="name">project.task.inherit.alphabetically.order.kanban</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_kanban_inherit_all_task"/>
        <field name="arch" type="xml">
            <kanban position="attributes">
                <attribute name="default_order">name</attribute>
            </kanban>
        </field>
    </record>
</odoo>