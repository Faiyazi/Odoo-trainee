<odoo>
    <record id="view_task_search_inherit_new_filter" model="ir.ui.view">
        <field name="name">project.task.search.inherit.new.tasks</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_search_form"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <filter name="new_tasks" string="New Tasks" domain="[('allocated_hours', '&lt;', 5)]"/>
            </xpath>
        </field>
    </record>
</odoo>
