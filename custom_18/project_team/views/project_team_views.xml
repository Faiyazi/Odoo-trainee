<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="project_team_view_form" model="ir.ui.view">
        <field name="name">project.team.view.form</field>
        <field name="model">project.team</field>
        <field name="arch" type="xml">
            <form>
                <sheet string="Project">
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button"
                            name="action_project_team_member"
                            type="object" icon="fa-users">
                            <div class="o_stat_info">
                                <field name="member_count" class='o_stat_value' />
                                <span class="o_stat_text">Team Member</span>

                            </div>
                        </button>
                    </div>
                    <group>
                        <field name="sequence" />
                        <field name="name" />
                        <field name="active" />
                        <field name="team_leader" />
                        <field name="team_member" />
                    </group>
                </sheet>
                <chatter />
            </form>
        </field>
    </record>

    <record id="view_project_team_list" model="ir.ui.view">
        <field name="name">project.team.list</field>
        <field name="model">project.team</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" />
                <field name="name" />
                <field name="team_leader" />
                <field name="active" />
            </list>
        </field>
    </record>

    <record id="project_team_view_kanban" model="ir.ui.view">
        <field name="name">project.team.view.kanban</field>
        <field name="model">project.team</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_example">
                <field name="name" />
                <field name="team_leader" />
                <field name="team_member" />
                <field name="active" />
                <field name="sequence" />
                <templates>
                    <t t-name="card" class="flex-row">
                        <div class="oe_kanban_card">
                            <strong>
                                <field name="sequence" />
                            </strong>
                            <br />
                            <field name="team_leader" />
                            <br />
                            <span t-if="record.active.raw_value" class="badge bg-success">Active</span>
                            <span t-if="!record.active.raw_value" class="badge bg-danger">Inactive</span>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="project_team_view_activity_1" model="ir.ui.view">
        <field name="name">project.team.view.activity</field>
        <field name="model">project.team</field>
        <field name="arch" type="xml">
            <activity string="Activity">
                <templates>
                    <div t-name="activity-box" class="d-block">
                        <div class="d-flex justify-content-between">
                            <field name="name" class="o_text_block o_text_bold" />
                            <div class="m-1" />
                            <field name="team_leader" />
                        </div>
                        <div class="d-flex justify-content-between">
                            <div class="m-1" />
                            <field name="sequence" />
                        </div>
                    </div>
                </templates>
            </activity>
        </field>
    </record>

    <record id="action_project_team" model="ir.actions.act_window">
        <field name="name">Project Team</field>
        <field name="res_model">project.team</field>
        <field name="view_mode">list,form,kanban,activity</field>
    </record>

    <!-- <menuitem id="menu_project_team"
        name="Project Team"
        parent="menu_project_team_member"
        action="action_project_team"
        sequence="3" /> -->

</odoo>