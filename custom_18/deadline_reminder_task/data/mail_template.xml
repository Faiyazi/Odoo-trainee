<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="user_task_email_template" model="mail.template">
            <field name="name">Task Reminder: Assigned Task Notification</field>
            <field name="model_id" ref="project.model_project_task" />
            <field name="subject">Reminder: {{object.name}} Task Assigned to You</field>
            <field name="email_from">{{user.email or 'admin@example.com'}}</field>
            <field name="email_to">abc@gmail.com</field>
            <field name="body_html" type="html">

                <div style="margin: 20px; padding: 50px; font-family: Arial, sans-serif;">
                    <p style="font-size: 15px;">
                        Dear
                    </p>

                    <p style="font-size: 13px;">
                        This is a reminder for the task assigned to you:
                    </p>

                    <ul>
                        <li>
                            <strong>Task:</strong>
                            <t t-out="object.name or ''"></t>
                        </li>
                        <li>
                            <strong>Project:</strong>
                            <t t-out="object.partner_id.name or ''"></t>
                        </li>
                        <li>
                            <strong>Deadline:</strong>
                            <t t-out="object.date_deadline or ''"></t>
                        </li>
                    </ul>

                    <p style="font-size: 13px;">Please ensure the task is completed on time.</p>

                    <br />
                    <p>Thanks,</p>
                    <p>
                        <t t-out="object.name or ''"></t>
                    </p>
                </div>

            </field>
        </record>


    </data>
</odoo>