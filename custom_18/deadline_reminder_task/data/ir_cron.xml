<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="ir_cron_auto_task" model="ir.cron">
        <field name="name">Task Deadline Reminder</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="model_id" ref="model_project_task"/>
        <field name="code">model._my_cron_method()</field>
        <field name="state">code</field>
    </record>


    <record id="ir_cron_daily_timesheet" model="ir.cron">
            <field name="name">Daily Timesheet Summary</field>
            <field name="model_id" ref="project.model_project_task"/>
            <field name="state">code</field>
            <field name="code">model._send_daily_timesheet_summary()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
    </record>

</odoo>
