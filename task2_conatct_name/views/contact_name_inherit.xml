<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="contact_name_task2" model="ir.ui.view">
        <field name="name">res.partner.inherit.contact.task2.form</field>
        <field name='model'>res.partner</field>
        <field name='inherit_id' ref='base.view_partner_form' />
        <field name='arch' type='xml'>
            <xpath expr="//field[@name='name']" position="after">
                <group class='m-2'>
                    <field name="new_object_id" />
                </group>
            </xpath>
        </field>
    </record>
    
    <record id="view_contact_name_form" model="ir.ui.view">
        <field name="name">contact.name.form</field>
        <field name="model">contact.name</field>
        <field name="arch" type="xml">
            <form string="Contact Name">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

  
    <record id="view_contact_name_tree" model="ir.ui.view">
        <field name="name">contact.name.tree</field>
        <field name="model">contact.name</field>
        <field name="arch" type="xml">
            <list string="Contact Names">
                <field name="name"/>
            </list>
        </field>
    </record>


    <record id="action_contact_name" model="ir.actions.act_window">
        <field name="name">Contact Names</field>
        <field name="res_model">contact.name</field>
        <field name="view_mode">list,form</field>
    </record>


    <menuitem
        id="menu_contact_root"
        name="Contacts Custom"
        sequence="1"/>

    <menuitem
        id="menu_contact_name"
        name="Contact Names"
        parent="menu_contact_root"
        action="action_contact_name"
        sequence="1"/>

</odoo>
