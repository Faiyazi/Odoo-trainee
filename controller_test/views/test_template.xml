<odoo>
    <template id="test_controller_template" name="Contact Us Page">
        <t t-call="website.layout">
            <div class="container mt-5">
                <h1 class="mt-30">CRM Lead</h1>

                <form action="/test/submit/button" method="post" class="mt-3" redirect="/lead/thankyou" >

                    <div class="row">
                        <!-- Name -->
                        <div class="col-md-6 mb-3">
                            <label>Name</label>
                            <input type="text" name="name" class="form-control" required="True" />
                        </div>

                        <!-- Email -->
                        <div class="col-md-6 mb-3">
                            <label>Price</label>
                            <input type="float" name="price" class="form-control" required="True" />
                        </div>

                        <div class="col-md-6 mb-3">
                            <label>Discount</label>
                            <input type="float" name="discount" class="form-control" required="True" />
                        </div>
                    </div>


                    <!-- Submit -->
                    <button type="submit" class="btn btn-primary mb-5">Submit</button>
                </form>
            </div>
        </t>
    </template>

    <template id="lead_created_template" name="Lead Created">
        <t t-call="website.layout">
            <div class="container mt-4"  style='text-align: center;' >
                <h3 >Thank you! ðŸŽ‰</h3>
                <p>Your lead has been created successfully.</p>
                 <a href="/shopping" class="btn btn-primary mt-3">OK</a>
            </div>
        </t>
    </template>

</odoo>
    
