<odoo>
    <template id="test_controller_template" name="Contact Us Page">
        <t t-call="website.layout">
            <div class="container mt-5">
                <h1 class="mt-30">Product</h1>

                <form action="/test/submit/button"
                    method="post"
                    class="mt-3"
                    enctype="multipart/form-data">

                    <!-- âœ… CSRF TOKEN REQUIRED FOR POST -->
                    <input type="hidden"
                        name="csrf_token"
                        t-att-value="request.csrf_token()" />

                    <div class="row">

                        <!-- âœ… Image -->
                        <div class="col-md-6 mb-3">
                            <label>Image</label>
                            <input type="file"
                                name="image_128"
                                class="form-control"
                                accept="image/*"
                                required="required" />
                        </div>

                        <!-- âœ… Name -->
                        <div class="col-md-6 mb-3">
                            <label>Name</label>
                            <input type="text"
                                name="name"
                                class="form-control"
                                required="required" />
                        </div>

                        <!-- âœ… Stock -->
                        <div class="col-md-6 mb-3">
                            <label>Stock</label>
                            <input type="number"
                                name="stock"
                                class="form-control"
                                min="0"
                                required="required" />
                        </div>

                        <!-- âœ… Price -->
                        <div class="col-md-6 mb-3">
                            <label>Price</label>
                            <input type="number"
                                name="price"
                                class="form-control"
                                step="0.01"
                                min="0"
                                required="required" />
                        </div>

                        <!-- âœ… Discount -->
                        <div class="col-md-6 mb-3">
                            <label>Discount</label>
                            <input type="number"
                                name="discount"
                                class="form-control"
                                step="0.01"
                                min="0"
                                required="required" />
                        </div>

                    </div>

                    <!-- âœ… Submit -->
                    <button type="submit" class="btn btn-primary mb-5">
                        Submit
                    </button>
                </form>

            </div>
        </t>
    </template>

    <template id="lead_created_template" name="Lead Created">
        <t t-call="website.layout">
            <div class="container mt-4" style='text-align: center;'>
                <h3>Thank you! ðŸŽ‰</h3>
                <p>Your lead has been created successfully.</p>
                <a href="/shopping" class="btn btn-primary mt-3">OK</a>
            </div>
        </t>
    </template>

</odoo>
    