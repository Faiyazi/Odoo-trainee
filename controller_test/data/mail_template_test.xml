<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mail_template_test_controller" model="mail.template">
        <field name="name">Mail Template : Test Controller Form Submit</field>
        <field name="email_from">{{ (user.company_id.default_from_email) }}</field>
        <field name="use_default_to" eval="False" />
        <field name="subject">Test Controller Form</field>
        <field name="model_id" ref="model_test_controller" />
        <field name="body_html" type="html">
            <p> Dear<p>
                    <p>
                        <t t-out="user.name" />
                    </p>
                    <p>
                        <t t-out="user.email" />
                    </p>

                </p>
                <b>Thank
                For Register your Product <t t-out="object.name" />
                </b>
                 <br />
                <br />
                <a
                    t-att-href="'/web/content/%s?download=true'%object.attachment_id.id">Download</a>

            </p>
        </field>
    </record>

</odoo>