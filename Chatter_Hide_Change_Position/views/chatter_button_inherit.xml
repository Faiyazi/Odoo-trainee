<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="partner_form_add_toggle_btn" model="ir.ui.view">
        <field name="name">res.partner.form.add.toggle.button</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">

            <!-- Insert button in the form header, ALWAYS exists -->
            <xpath expr="//sheet" position="before">
                <div class="oe_button_box">
                    <t t-if="hide_chatter_btn==true">

                    <button type="button" id="my_custom_js_btn" class="btn btn-primary">
                        Toggle Chatter
                    </button>
                    </t>

                </div>
            </xpath>


        </field>
    </record>
</odoo>