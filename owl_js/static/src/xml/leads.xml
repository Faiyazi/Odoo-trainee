<?xml version="1.0" encoding="UTF-8" ?>

<templates xml:space="preserve">
    <t t-name="owl_js.CrmLeads">
        <div class="container mt-3">
            <div class="d-flex align-items-center gap-2 p-2">
                <button class="btn btn-primary" t-on-click="createLead">New</button>
                <h3 class="mb-0 pt-0">CRM Leads</h3>
            </div>

            <table class="table table-striped">
                <thead>owl_js
                    <tr>
                        <th>Name</th>
                        <th>Partner</th>
                        <th>Expected Revenue</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-if="state.leads.length === 0">
                        <tr>
                            <td colspan="4" class="text-center">No leads found</td>
                        </tr>
                    </t>
                    <t t-foreach="state.leads" t-as="lead" t-key="lead.id">
                        <tr>
                            <td><t t-esc="lead.name" /></td>
                            <td><t t-esc="lead.partner_id[1]" /></td>
                            <td>$ <t t-esc="lead.expected_revenue"/></td>
                            <td class="d-flex gap-2">
                                <button class="btn btn-sm btn-primary" t-on-click="editLead.bind(this, lead.id)"><i class="fa fa-edit"></i></button>
                                <button class="btn btn-sm btn-danger" t-on-click="deleteLead.bind(this, lead.id)"><i class="fa fa-trash"></i></button>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </div>
    </t>
</templates>
