<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_message_in_setting" model="ir.ui.view">
        <field name="name">Message for Effect</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//div[@id='invite_users']" position="after">
                <div class="app_settings_block" string="Message">
                    <h2>Message</h2>

                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="message"/>
                                <div class="text-muted">
                                    Configure your custom message here.
                                </div>
                                <field name="message"/>
                                <field name="effect_type"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>

        </field>
    </record>
</odoo>
